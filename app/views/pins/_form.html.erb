
	<%=simple_form_for @pin, remote: true,:html => {:multipart =>true} ,authenticity_token: true  do |f| %>

    <% if @pin.errors.any? %>
	   
		<div id ='errors'>
		<h2>
		<%=pluralize(@pin.errors.count,"error")%>
		prevented this pin from saving

		</h2>
		<ul>
		
		<% @pin.errors.full_messages.each  do |msg| %>
		<li> <%=msg%> </li>
		<%end%>
		<%end%>
	
		</ul>
		</div>

    <div class="form_group">
	<%= f.input :image , input_html: {class: 'form-control'} %>
	</div>
	<br>
   

    <div class="form_group">
	<%= f.input :title , input_html: {class: 'form-control'} %>
	</div>
	<br>

	<div class="form_group">
	<%=f.label :board %>
	<%=f.select :board_id, options_from_collection_for_select(current_user.boards,"id", "name")%>
	</div>
	<br>

	 <div class="form_group">
	<%= f.input :tag_list , input_html: {class: 'form-control'} %>
	</div>
	<br>

	<div class="form_group">
	<%= f.input :description , input_html: {class: 'form-control'} %>
	<br>
	</div>
	
	<%=f.button :submit, class: "btn btn-primary" %>
	<button class: "btn btn-primary" >/button>
	</div>
    

<%end%>




